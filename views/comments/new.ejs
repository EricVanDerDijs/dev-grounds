<% include ../partials/header %>
<div class="container">
	<h1 class="text-center mb-4">New Comment on <%= devground.name%></h1>
	<div class="row justify-content-center">
		<div class="col-6">
			<form action="/devgrounds/<%=devground._id%>/comments" id="newComment" method="POST" class="mb-3">
				<div class="form-group">
					<label for="commentText">Comment</label>
					<input type="text" name="comment[text]" id="commentText" placeholder=". . ." class="form-control">
				</div>
				<button type="submit" class="btn btn-primary btn-block">Submit</button>
			</form>
		</div>
	</div>
</div>

<% include ../partials/footer %>